{
  "name": "core",
  "version": "1.0.0",
  "description": "smart contracts",
  "scripts": {
    "lint": "prettier --write 'contracts/**/*.sol'",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy": "npx hardhat run"
  },
  "author": "",
  "prettier": {
    "printWidth": 180,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "useTabs": false,
    "tabWidth": 2,
    "plugins": [
      "prettier-plugin-solidity"
    ],
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "singleQuote": false,
          "tabWidth": 4
        }
      }
    ]
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/contracts": "^4.9.6",
    "dotenv": "^16.4.5",
    "hardhat": "^2.21.0",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
